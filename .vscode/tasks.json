{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build hello_omp",
            "type": "shell",
            "command": "clang",
            "args": [
                "-Xpreprocessor",
                "-fopenmp",
                "-I/opt/homebrew/opt/libomp/include",
                "-L/opt/homebrew/opt/libomp/lib",
                "-lomp",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$clang"
        }
    ]
}